print("Math Game!")
print()
counter = 0
t = int(input("Which numbers multiplication table do you want to do?: "))
tMax = t*10
for i in range(t, tMax,t ):
  print(t, "Ã— 1 =")
  answer = int(input("answer: "))
  if answer == t * 1:
    print("Thats correct")
